{
    "manifest_version": 3,
    "name": "Better Prompt",
    "description": "Write Hyper Optimized Prompts in a single click.",
    "version": "1.0",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}